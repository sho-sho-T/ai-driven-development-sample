{
	"$schema": "https://biomejs.dev/schemas/2.3.14/schema.json",
	"files": {
		"includes": [
			"**",
			"!.worktrees/**",
			"!**/dist/**",
			"!apps/web/src/routeTree.gen.ts",
			"!apps/admin-web/src/routeTree.gen.ts",
			"!apps/dev-console/src/routeTree.gen.ts"
		]
	},
	"css": {
		"parser": {
			"cssModules": false,
			"tailwindDirectives": true
		},
		"linter": {
			"enabled": true
		}
	},
	"formatter": {
		"enabled": true
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": false
		}
	}
}
